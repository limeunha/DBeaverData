SELECT LOWER('JENNIE') FROM dual; --소문자 변경
SELECT UPPER('Jennie') FROM dual; --대문자 변경

SELECT LTRIM('                 JENNIE') FROM DUAL; --왼쪽 공백 제거
SELECT LTRIM('블랙핑크', '블랙')FROM DUAL; --왼쪽에서 부터 특정한 문자를 제거

SELECT RTRIM('JENNIE                 ') FROM DUAL; --오른쪽 공백 제거
SELECT RTRIM('블랙핑크', '핑크')FROM DUAL;   --오른쪽에서 부터 특정한 문자를 제거

SELECT TRIM('   JENNIE     ')FROM DUAL; --양옆의 공백 제거
SELECT TRIM(LEADING '블' FROM '블랙핑크') FROM DUAL;
SELECT TRIM(TRAILING '크' FROM '블랙핑크') FROM DUAL;
SELECT TRIM(BOTH '블' FROM '블랙핑크블') FROM DUAL;


--SUBSTR(문자열, 문자열 시작점, 길이)
SELECT SUBSTR('블랙핑크제니', 3, 2) FROM DUAL; 
SELECT SUBSTR('블랙핑크제니', 3, 4) FROM DUAL; 

SELECT LENGTH ('블랙핑크') FROM DUAL; --문자열의 길이

SELECT REPLACE ('블랙핑크제니', '제니', '지수') FROM DUAL; --'제니'를 '지수'로 변경
SELECT REPLACE ('블랙핑크제니', '블랙') FROM DUAL; --'블랙' 제거


--숫자함수

SELECT ABS(-1) FROM DUAL; --절대값
SELECT SIGN(-5) FROM DUAL; --부호 

SELECT ROUND(163.76, 1)FROM DUAL; --반올림해서 소수점 1자리까지 표현
SELECT ROUND(163.76, -2)FROM DUAL; --십의자리에서 반올림

SELECT TRUNC(54.29, 1)FROM DUAL; --버림이 일어나고 소수점이하 1자리 까지 표현
SELECT TRUNC(54.29, -1)FROM DUAL; --십의 자리 아래로 버림

SELECT CEIL(72.86) FROM DUAL; --올림
SELECT CEIL(-33.4) FROM DUAL; 

SELECT FLOOR(22.2) FROM DUAL; --내림
SELECT FLOOR(-22.3) FROM DUAL;

SELECT MOD(15,7)FROM DUAL; --15를 7로 나눈 나머지


--날짜 함수
SELECT 
	EXTRACT(YEAR FROM SYSDATE) AS YEAR,
	EXTRACT(MONTH FROM SYSDATE) AS MONTH,
	EXTRACT(DAY FROM SYSDATE) AS DAY,
FROM DUAL; --특정 년,월, 일 출력


SELECT 
	ADD_MONTHS(TO_DATE('2021-12-31','YYYY-MM-DD'), -1) AS PRE,
	ADD_MONTHS(TO_DATE('2021-12-31','YYYY-MM-DD'), 2) AS NEXT 
FROM DUAL; 


--명시적 변환 함수
SELECT TO_NUMBER('1234') FROM DUAL; --문자 ->숫자
SELECT TO_NUMBER('adec') FROM DUAL;

SELECT TO_CHAR(1234) FROM DUAL; --숫자 or날짜 -> 문자
SELECT TO_CHAR(SYSDATE, 'YYYYMMDD HH24MISS') FROM DUAL;

SELECT TO_DATE('20210602', 'YYYYMMDD') FROM DUAL; --문자 -> 날짜

--NULL 관련 함수
SELECT NAME, NVL(ADDRESS, '주소없음') AS ADDRESS FROM CUSTOMER;

SELECT NAME, NULLIF(ADDRESS, '인천') AS ADDRESS FROM CUSTOMER;

--DECODE

SELECT * FROM CUSTOMER;
SELECT ID, DECODE(ID, 1, 'BLUE', 2, 'RED', 3, 'YELLOW',  4, 'BLACk',  5, 'BLUE') FROM CUSTOMER; 

SELECT ID,
	CASE WHEN ID = 1 THEN 'BLUE'
	CASE WHEN ID = 2 THEN 'RED'
	CASE WHEN ID = 3 THEN 'YELLOW'
	CASE WHEN ID = 4 THEN 'BLACK'
	ELSE 'WHITE'
END AS TEST
FROM CUSTOMER;



















